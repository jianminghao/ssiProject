	<script type="text/javascript">
	var locationPath = "localhost:8080/myssiProject";
	 $('.btn').click(function() {
		debugger;
		var opt = $(this).value();
		switch(opt) {
	     case '1':
	    	 locationPath += 'insert';
	        break;
	     case '2':
	    	 locationPath += 'delete';
	        break;
	     case '3':
	    	 locationPath += 'update';
	        break;
	     default:
	    	 locationPath += 'list';
		}
		var deptNo =  document.getElementById("deptNo").value;
    	var dName =  document.getElementById("dName").value;
    	var loc =  document.getElementById("loc").value;
		document.all.dept.action=locationPath +"&deptInfo.deptNo="+deptNo +"&deptInfo.dName="+dName +"&deptInfo.loc="+loc;
		document.all.dept.submit();
	});
	 
	//定义Action的URL
    insert = function (){
		debugger;
    	var deptNo =  document.getElementById("deptNo").value;
    	var dName =  document.getElementById("dName").value;
    	var loc =  document.getElementById("loc").value;
		document.all.dept.action=locationPath+"/dept.do?method=insert"
									+"&deptNo="+deptNo
									+"&dName="+dName
									+"&loc="+loc;
		document.all.dept.submit();
	}
    function deleteInfo(){
		debugger;
    	var deptNo =  document.getElementById("deptNo").value;
    	var dName =  document.getElementById("dName").value;
    	var loc =  document.getElementById("loc").value;
		document.all.dept.action=locationPath+"/dept.do?method=delete"
									+"&deptNo="+deptNo
									+"&dName="+dName
									+"&loc="+loc;
		document.all.dept.submit();
	}
    function update(){
		debugger;
    	var deptNo =  document.getElementById("deptNo").value;
    	var dName =  document.getElementById("dName").value;
    	var loc =  document.getElementById("loc").value;
		document.all.dept.action=locationPath+"/dept.do?method=update"
									+"&deptNo="+deptNo
									+"&dName="+dName
									+"&loc="+loc;
		document.all.dept.submit();
	}
    function query(){
		debugger;
    	var deptNo =  document.getElementById("deptNo").value;
    	var dName =  document.getElementById("dName").value;
    	var loc =  document.getElementById("loc").value;
		document.all.dept.action=locationPath+"/dept.do?method=list"
									+"&deptNo="+deptNo
									+"&dName="+dName
									+"&loc="+loc;
		document.all.dept.submit();
	}
	
	</script>
